<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Exit Car</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_tag exit_car_parking_lots_path, method: 'POST' do %>
        <div class="modal-body">
            <div class="form-group row">
              <div class="col-sm-6">
                <%= text_field_tag :registration_number, nil, placeholder: 'Registration Number', autofocus: true, class: "form-control input-sm form-control-sm" %>
              </div>
              <div class="col-sm-6">
                <%= select_tag "payment_mode", options_for_select(["Cash", "UPI", "Card", "Unpaid", "Other"]), class: "form-control input-sm form-control-sm" %>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-6">
                <%= text_field_tag :total_charges, nil, placeholder: 'Total Charges', autofocus: true, class: "form-control input-sm form-control-sm", readonly: true %>
              </div>
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= submit_tag "Pay & Exit Car", data: { disable_with: "Exiting Car..." }, class: 'btn btn-sm btn-outline-primary'%>
        </div>
      <% end %>
    </div>
  </div>
</div>