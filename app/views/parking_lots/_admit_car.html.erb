<div class="row">
  <div class="col-sm-12 mb-1">
    <div class="card w-75">
      <div class="card-body">
        <h5 class="card-title"> Enter Incoming Car Details </h5>
        <%= form_tag admit_car_parking_lots_path, method: 'POST' do %>
          <div class="form-group row">
            <div class="col-sm-3">
              <%= text_field_tag :registration_number, nil, placeholder: 'Registration Number', autofocus: true, class: "form-control input-sm form-control-sm" %>
            </div>
            <div class="col-sm-3">
              <%= text_field_tag :color, nil, placeholder: 'color', autofocus: true, class: "form-control input-sm form-control-sm" %>
            </div>
            <div class="col-sm-3">
              <%= submit_tag "Create Ticket", data: { disable_with: "Generating Ticket..." }, class: 'btn btn-sm btn-outline-primary'%>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>